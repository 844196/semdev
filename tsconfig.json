{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build/",
    "resolveJsonModule": true,
  },
  "exclude": ["**/*.spec.ts"]
}
